<div class="search-container">
  <div class="container text-light">
    <div class="row">
      <div class="col-lg-6 mt-5">
        <h1>Find Your Dream Car</h1>
        <div class="card search-card mt-3 mb-5">
          <div class="card-body">
            <h5 class="card-title">Search vehicles for sale</h5>
            <%= form_tag('/searches/results', method: :get) do -%>
              <div class="form-row mt-4">
                <div class="form-group col-sm-6">
                  <%= number_field_tag :price_min, nil, min: 0, placeholder: 'Mix Price', class:'form-control' %>
                </div>
                <div class="form-group col-sm-6">
                  <%= number_field_tag :price_max, nil, min: 0, placeholder: 'Max Price', class:'form-control' %>
                </div>
              </div>
              <button type="submit" class="btn btn-outline-light mt-2">Search!</button>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
